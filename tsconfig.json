{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": [ "node" ],
    "typeRoots": ["./node_modules/@types" ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
}
